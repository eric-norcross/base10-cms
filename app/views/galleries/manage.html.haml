%article#admin
  %header
    %h1 Manage Galleries

  = render "admins/admin_nav"

  %section
    %header
      .links
        = link_to 'Add a new Gallery', new_gallery_path
        
    %table
      %thead
        %tr
          %th Id
          %th Title
          %th Figure Count
          %th 
      %tbody
        - @galleries.each do |gallery|
          %tr
            %td= gallery.id
            %td= gallery.title
            %td= gallery.figures.length
            %td.controls
              = link_to 'Show', gallery
              = link_to 'Edit', edit_gallery_path(gallery)
              = link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' }

    %footer       
      .links
        = link_to 'Add a new Gallery', new_gallery_path
