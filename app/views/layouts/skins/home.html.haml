      %a.gallery-control.right{"data-slide" => "next", :href => "#main-gallery"} â€º
    
    %aside
      %ul
        - @page.figures.each do |figure|
          %li
            = link_to figure.link do
              = image_tag figure.images.first.asset_url.to_s